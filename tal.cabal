name:                tal
version:             0.1.1.0
synopsis:            An implementation of Typed Assembly Language (Morrisett, Walker, Crary, Glew)
-- description:
homepage:            https://github.com/sweirich/tal
license:             MIT
license-file:        LICENSE
author:              Stephanie Weirich
maintainer:          sweirich@cis.upenn.edu
copyright:           2015 Stephanie Weirich
category:            Language
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:     A, C, Util, TAL, K, F, STLC, Translate
  default-extensions:  ScopedTypeVariables
    , FlexibleInstances
    , MultiParamTypeClasses
    , FlexibleContexts
    , UndecidableInstances
    , TupleSections
    , GADTs
    , TypeSynonymInstances
    , DeriveGeneric
    , TypeApplications
    , GeneralizedNewtypeDeriving 
  build-depends:       base >=4.7 && < 5
                     , containers
                     , mtl
                     , pretty
                     , transformers
                     , unbound-generics
  hs-source-dirs:      src
  default-language:    Haskell2010
  
Test-Suite test
    type:       exitcode-stdio-1.0
    hs-source-dirs: src
    main-is:    Main.hs
    other-modules: A, C, Util, TAL, K, F, Translate
    build-depends: base
      , containers
      , mtl
      , pretty
      , transformers
      , unbound-generics
    default-language:    Haskell2010
    default-extensions:  
        ScopedTypeVariables
      , FlexibleInstances
      , MultiParamTypeClasses
      , FlexibleContexts
      , UndecidableInstances
      , TupleSections
      , GADTs
      , TypeSynonymInstances
      , DeriveGeneric
      , TypeApplications
      , GeneralizedNewtypeDeriving 